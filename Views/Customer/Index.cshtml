@model apptienda.Models.Customer
@{
    ViewBag.Title = "Personal Information";
}

<h2>@ViewBag.Title</h2>

<form method="post" asp-action="RegistrarInfo">
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control"  readonly/>
    </div>
    <div class="form-group  mt-2">
        <label asp-for="DNI" class="control-label"></label>
        <input asp-for="DNI" class="form-control" />
        <span asp-validation-for="DNI" class="text-danger"></span>
    </div>
    <div class="form-group  mt-2">
        <label asp-for="BirthDate" class="control-label"></label>
        <textarea asp-for="BirthDate" class="form-control" rows="5"></textarea>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
        <div class="form-group  mt-2">
        <label asp-for="Address" class="control-label"></label>
        <textarea asp-for="Address" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Registrar</button>
</form>
<h1>@ViewData["Message"]</h1>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
